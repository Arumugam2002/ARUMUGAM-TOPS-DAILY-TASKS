			Connection conn = DBConnection.driverConnection();
			String sql = "select * from wishlist where userid = ? and cid = ?";
			PreparedStatement pst = conn.prepareStatement(sql);
			
			pst.setInt(1, userid);
			pst.setInt(2, cid);
			
			ResultSet
			
		} catch (Exception e) {
			// TODO: handle exception
			
			e.printStackTrace();
		}
	}
	
	
}
